<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="Tom Bokma" id="1">
        <preConditions onFail="MARK_RAN">
            <dbms type="mysql"/>
        </preConditions>
        <createTable tableName="object_sync_config">
            <column name="object_sync_config_id" type="BINARY(16)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="object_sync_configPK"/>
            </column>
            <column name="connector_instance_id" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>
            <column name="document_definition_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN"/>
            <column name="object_type_id" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Ivo Zaal" id="2">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
        </preConditions>
        <createTable tableName="object_sync_config">
            <column name="object_sync_config_id" type="${uuidType}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="object_sync_configPK"/>
            </column>
            <column name="connector_instance_id" type="${uuidType}">
                <constraints nullable="false"/>
            </column>
            <column name="document_definition_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN"/>
            <column name="object_type_id" type="${uuidType}">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>