<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="0" author="Ivar Koreman">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="process_data_object_relation"/>
            </not>
        </preConditions>

        <createTable tableName="process_data_object_relation">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="obj_type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="obj_id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="process_instance_id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_process_data_object_relation_obj_type_obj_id"
                     tableName="process_data_object_relation">
            <column name="obj_type" type="varchar(100)"/>
            <column name="obj_id" type="varchar(64)"/>
        </createIndex>

        <createIndex indexName="idx_process_data_object_relation_process_instance_id"
                     tableName="process_data_object_relation">
            <column name="process_instance_id" type="varchar(64)"/>
        </createIndex>

        <addUniqueConstraint tableName="process_data_object_relation"
                             columnNames="obj_type, obj_id, process_instance_id"/>
    </changeSet>

</databaseChangeLog>
