<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Ritense">
        <createTable tableName="zaak_hersteltermijn">
            <column name="id" type="${uuidType}">
                <constraints primaryKey="true" primaryKeyName="zaak_hersteltermijnPK"/>
            </column>
            <column name="zaak_url" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATETIME(0)">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATETIME(0)"/>
            <column name="max_duration_in_days" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Ritense">
        <validCheckSum>9:4fd48db99b7e0e74c899f951ed4d83eb</validCheckSum>
        <createIndex indexName="idx_zaak_hersteltermijn_zaak_url_end_date" tableName="zaak_hersteltermijn" unique="true">
            <column name="zaak_url"/>
            <column name="end_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>



