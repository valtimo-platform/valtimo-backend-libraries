<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Ritense" id="1">
        <createTable tableName="form_submission">
            <column name="id" type="${uuidType}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="form_submissionPK"/>
            </column>
            <column name="content" type="JSON">
                <constraints nullable="false"/>
            </column>
            <column name="task_instance_id" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="edited_on" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="edited_by" type="VARCHAR">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Ritense" id="2">
        <createIndex indexName="task_instance_id_index" tableName="form_submission">
            <column name="task_instance_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
