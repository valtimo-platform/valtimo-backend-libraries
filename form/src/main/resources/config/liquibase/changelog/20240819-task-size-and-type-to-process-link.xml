<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Ritense">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="process_link"/>
        </preConditions>
        <addColumn tableName="process_link">
            <column name="form_display_type" type="varchar(32)" defaultValue="modal"/>
        </addColumn>
        <addColumn tableName="process_link">
            <column name="form_size" type="varchar(32)" defaultValue="medium"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
