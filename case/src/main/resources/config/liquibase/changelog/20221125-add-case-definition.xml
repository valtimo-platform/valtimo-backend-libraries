<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <property name="booleanFalseValue" value="0" dbms="mysql"/>
    <property name="booleanFalseValue" value="false" dbms="postgresql"/>

    <changeSet id="1" author="Ritense">
        <createTable tableName="case_definition">
            <column name="case_definition_name" type="varchar(256)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="can_have_assignee" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Ritense">
        <sql>
            insert into case_definition
            select distinct document_definition_name, ${booleanFalseValue}
            from json_schema_document_definition jsdd
        </sql>
    </changeSet>

</databaseChangeLog>