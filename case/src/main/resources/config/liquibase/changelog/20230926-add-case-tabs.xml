<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="1" author="Ritense">
        <createTable tableName="case_tab">
            <column name="case_definition_name" type="varchar(256)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tab_key" type="varchar(256)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(256)"/>
            <column name="tab_order" type="${intType}">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="content_key" type="varchar(256)"/>
        </createTable>
    </changeSet>

    <!-- match the type of this column with json_schema_document_definition.document_definition_name -->
    <changeSet id="2" author="Ritense">
        <modifyDataType
            tableName="case_tab"
            columnName="case_definition_name"
            newDataType="varchar(50)" />
    </changeSet>
</databaseChangeLog>