{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://json-schema.org/draft-07/schema#",
    "title": "Form flow definition",
    "description": "Representation of a form flow definition",
    "type": "array",
    "additionalProperties": false,
    "items": {
        "type": "object",
        "properties": {
            "title": {
                "type": "string"
            },
            "key": {
                "type": "string"
            },
            "path": {
                "type": "string"
            },
            "displayType": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "displayTypeParameters": {
                        "type": "object"
                    }
                },
                "required": [
                    "type"
                ]
            },
            "sortable": {
                "type": "boolean"
            },
            "defaultSort": {
                "type": "string"
            },
            "order": {
                "type": "integer"
            }
        },
        "required": [
            "key",
            "path",
            "displayType",
            "sortable"
        ]
    }
}